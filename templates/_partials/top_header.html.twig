<!-- Top Bar -->
<section class="container-fluid top-bar sticky-top p-2" id="top-bar">
	<div class="d-flex justify-content-between align-items-center">
		<div class="d-flex flex-column flex-md-row">
			<a href="#" class="me-3">
				<i class="bi bi-envelope-fill me-1"></i>
				loic@contact.com
			</a>
			<div>
				<i class="bi bi-telephone-fill me-1"></i>
				+33(0) 666.777.888
			</div>
		</div>
		<div class="connect-logos d-flex align-items-center ms-auto">
			{% if app.user and app.user.isVerified %}
				<div class="me-1">
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('app_admin') }}" class="me-2" title="Tableau de bord" target="_blank">
							<i class="icofont-speed-meter"></i>
						</a>
					{% endif %}
					<a href="#" class="me-2" title="Compte">
						<i class="bi bi-person bi-fill"></i>
					</a>
					<a href="{{ path('app_logout') }}" class="me-2" title="Déconnexion">
						logout
					</a>
				</div>
			{% else %}
				<div class="me-1">
					<a href="{{ path('app_login') }}" class="me-2" title="Connexion">
						login
					</a>
					<a href="{{ path('app_register') }}" class="me-2" title="Inscription">
						register
					</a>
				</div>
			{% endif %}
			<a href="{{ path('app_home') }}" class="me-2" title="Accueil">
				Accueil
			</a>
		</div>
		<div id="welcome" class="container-fluid list-group-item-primary ps-2">
			{% if app.user %}
				<p class="">
					Bienvenue
					<span class="fw-bold my-2">
						{{app.user.firstname}}
						{{app.user.lastname}},
					</span>
					Vous êtes connecté en tant que
					<span class="fw-bold my-2">
						{{app.user.username}},
						{{ app.user.userIdentifier }}
					</span>
				</p>
			{% endif %}
		</div>
	</div>
</section>
