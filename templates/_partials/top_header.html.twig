<!-- Bar test Start (admin, login, logout...) -->
<section id="welcome" class="container-fluid row d-none">
	<div class="col-10 d-flex justify-content-start align-items-center">
		{% if app.user %}
			<p>
				Bienvenue
				<strong>
					{{app.user.firstname}}
					{{app.user.lastname}},
				</strong>
				Vous êtes connecté en tant que
				<strong>
					{{app.user.username}},
					{{ app.user.userIdentifier }}
				</strong>
			</p>
		{% endif %}
	</div>
	<div class="col-2 d-flex justify-content-end align-items-center">
		{% if app.user and app.user.isVerified %}
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('app_admin') }}" class="info_item" title="Tableau de bord" target="_blank">
					<i class="bx bx-bar-chart-alt"></i>
				</a>
			{% endif %}
			<a href="{{ path('app_logout') }}" class="info_item" title="Déconnexion">
				<i class="bx bx-log-out"></i>
			</a>
		{% else %}
			<a href="{{ path('app_login') }}" class="info_item" title="Connexion">
				<i class="bx bx-log-in"></i>
			</a>
			<a href="{{ path('app_register') }}" class="info_item" title="Inscription">
				<i class="bx bx-user-plus"></i>
			</a>
		{% endif %}
		<a href="{{ path('app_home') }}" class="info_item" title="Accueil">
			<i class="bx bx-home"></i>
		</a>
	</div>
</section>
<!-- Bar test End (admin, login, logout...) -->
